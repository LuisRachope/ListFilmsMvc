@model ListFilmsMvc.Models.ViewModels.MovieFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Movie/Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Movie.Id" />
            <div class="form-group">
                <label asp-for="Movie.Title" class="control-label"></label>
                <input asp-for="Movie.Title" class="form-control" />
                <span asp-validation-for="Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Director" class="control-label"></label>
                <input asp-for="Movie.Director" class="form-control" />
                <span asp-validation-for="Movie.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.RealeseYear" class="control-label"></label>
                <input asp-for="Movie.RealeseYear" class="form-control" />
                <span asp-validation-for="Movie.RealeseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.TypeGenre" class="control-label"></label>
                <select asp-for="Movie.GenreId" asp-items="@(new SelectList(Model.Genres, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Category" class="control-label"></label>
                <input asp-for="Movie.Category" class="form-control" />
                <span asp-validation-for="Movie.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Rating" class="control-label"></label>
                <input asp-for="Movie.Rating" class="form-control" />
                <span asp-validation-for="Movie.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" asp-action="Index" class="btn btn-warning">Back to list</a>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}